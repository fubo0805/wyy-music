<!--pages/detail-video/detail-video.wxml-->
<wxs src="/utils/format.wxs" module="fmt"></wxs>
<video class="video" src="{{MVUrl}}"  danmu-list="{{danmuList}}" autoplay referrer-policy="origin"/>
<view class="info">
  <view class="name">{{mvInfo.name}}</view>
<view class="artistName">{{mvInfo.artistName}}</view>
<view class="play">{{fmt.formatCount(mvInfo.playCount)}}次播放 - {{mvInfo.publishTime}}</view>
</view>
<scroll-view class="related-video" scroll-y>
<block wx:for="{{mvRelate}}" wx:key="vid">
<view class="item">
<image class="image" src="{{item.coverUrl}}" mode="widthFix"/>
<view>{{item.title}}</view>
</view>
</block>
</scroll-view>